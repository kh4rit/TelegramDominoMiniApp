{
  "name": "telegram-domino-mini-app",
  "version": "1.0.0",
  "description": "Telegram Domino Mini App",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon",
    "build": "npm run build:server && npm run build:client && npm run prepare:pages",
    "build:server": "tsc -p tsconfig.json",
    "build:client": "tsc -p tsconfig.client.json",
    "prepare:pages": "cp public/index.html public/client.js public/",
    "watch": "tsc -w"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "undici-types": "^5.0.0"
  }
} 