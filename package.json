{
  "name": "telegram-domino-mini-app",
  "version": "1.0.0",
  "description": "Telegram Domino Mini App",
  "main": "dist/server.js",
  "scripts": {
    "app:dev": "nodemon",
    "app:build": "npm run build:server && npm run build:client",
    "app:start": "node dist/server.js",
    "build:server": "tsc -p tsconfig.json",
    "build:client": "tsc -p tsconfig.client.json",
    "bot:dev": "tsc -p tsconfig.json && ts-node src/bot/test.ts",
    "bot:build": "tsc -p tsconfig.json",
    "bot:start": "npm run build && node dist/bot/index.js",
    "build": "npm run app:build",
    "start": "npm run app:start",
    "dev": "npm run app:dev"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "telegraf": "^4.15.3",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "undici-types": "^5.0.0"
  }
}
